<Page
    x:Class="EBTL.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EBTL"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">
        <Image x:Name="image" Source="Assets/blood-transfusion-bag-vector_23-2147495571_smaller.jpg" NineGrid="0" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="textBlock" Height="38" Margin="0,10,0,0" TextWrapping="Wrap" Text="EBTL" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" TextAlignment="Center" Foreground="#FFC42F2F" SelectionHighlightColor="#FF2388D7" HorizontalAlignment="Center"/>
        <Button x:Name="button_signUp" Content="Sign up" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0,535,0,0" FontSize="36" BorderThickness="5" Background="#FFE6E6E6" Foreground="#FFDA2727" Click="button_signUp_Click">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE6E6E6" Offset="0.678"/>
                    <GradientStop Color="#FFA1151E"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
    </Grid>
</Page>
